<query id="getTodayStatus" action="select">
    <tables>
        <table name="pointhistory_status" />
    </tables>
    <columns>
        <column name="count(*)" alias="count" />
		<column name="point" />
    </columns>
    <conditions>
        <condition operation="equal" column="day" var="day" default="0" notnull="notnull" />
    </conditions>
</query>
